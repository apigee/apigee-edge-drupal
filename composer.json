{
    "name": "drupal/apigee_edge",
    "license": "GPL-2.0-or-later",
    "type": "drupal-module",
    "description": "Apigee Edge for Drupal.",
    "require": {
        "php": ">=7.1",
        "apigee/apigee-client-php": "^2.0.1",
        "cweagans/composer-patches": "^1.6.5",
        "drupal/core": "^8.6.3",
        "drupal/entity": "^1.0",
        "drupal/key": "^1.8",
        "php-http/guzzle6-adapter": "^1.1.1"
    },
    "require-dev": {
        "behat/mink" : "dev-master#9ea1cebe",
        "drush/drush": "^9.0",
        "egulias/email-validator": "1.2.14",
        "phpunit/phpunit": "^6.5",
        "webflo/drupal-core-require-dev": "^8.6"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "drush": {
            "services": {
                "drush.services.yml": "^9"
            }
        },
        "patches": {
            "drupal/core": {
                "EntityViewBuilder::getBuildDefaults doesn't respect the EntityInterface of the $entity parameter": "https://www.drupal.org/files/issues/2019-01-10/2951487_15_no-tests.patch"
            }
        }
    }
}
